<h1 class="text-2xl font-bold mb-4">Subscriptions</h1>
<%= link_to 'New Subscription', new_subscription_path, class: "bg-blue-500 text-white px-4 py-2 rounded" %>
<table class="min-w-full mt-4 border">
  <thead>
    <tr>
      <th>Plan</th>
      <th>Price ($)</th>
      <th>Interval</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @subscriptions.each do |sub| %>
      <tr>
        <td><%= sub.plan_name %></td>
        <td><%= sub.price_cents / 100.0 %></td>
        <td><%= sub.interval %></td>
        <td><%= link_to 'Delete', subscription_path(sub), method: :delete, data: { confirm: 'Are you sure?' }, class: "text-red-500" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
